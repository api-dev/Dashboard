<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <!-- First Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#4390DF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_detail_temp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textColor="#FFFFFF"
                android:text="17.2 Â°C"/>

            <TextView
                android:id="@+id/item_title_temp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#000000"
                android:alpha="0.3"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:text="Temperature"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="#4390DF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_detail_humidity"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textColor="#FFFFFF"
                android:text="32.89 %"/>

            <TextView
                android:id="@+id/item_title_humidity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#000000"
                android:alpha="0.3"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:text="Humidity"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="#4390DF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_detail_pressure"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textColor="#FFFFFF"
                android:text="1034.79"/>

            <TextView
                android:id="@+id/item_title_pressure"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#000000"
                android:alpha="0.3"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:text="Pressure hPa"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Second Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#4390DF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_detail_uvindex"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textColor="#FFFFFF"
                android:text="2.1"/>

            <TextView
                android:id="@+id/item_title_uvindex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#000000"
                android:alpha="0.3"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:text="UV Index"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>